<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />

    <title>infosecaware :: landing</title>

    <style>small { text-decoration-style: dotted; }</style>
    <script src="/assets/jquery/jquery-3.4.1.min.js"></script>
    <script src="/assets/tagcloud/tagcloud.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/popper/popper.min.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">infosecaware</a>

      <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <% if (typeof authUser === 'undefined') { %>
            <!-- unauthenticated user navbar -->
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
          <% } else { %>
            <!-- authenticated user navbar -->
            <li class="nav-item active">
              <a class="nav-link" href="/landing">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/post">Raise an issue</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/community">Community</a>
            </li>
          <% } %>
        </ul>
        <% if (typeof authUser !== 'undefined') { %>
          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Community search" aria-label="Community Search" />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        <% } %>
      </div>
    </nav>
