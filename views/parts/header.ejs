<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <link rel="stylesheet" href="/assets/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/assets/autosuggest/css/dropdown.css" />
    <link rel="stylesheet" href="/isaApp/css/styles.css" />

    <title>infosecaware :: landing</title>

    <script src="/assets/jquery/jquery-3.4.1.min.js"></script>
    <script src="/assets/tagcloud/tagcloud.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/popper/popper.min.js"></script>
    <script src="/assets/angular/angular.min.js"></script>
    <script src="/assets/autosuggest/js/AutoSuggest.js"></script>

    <script src="/isaApp/js/bootstrap.js"></script>
  </head>
  <body>
    <% include raiseIssue.ejs %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/landing">infosecaware</a>

      <div class="collapse navbar-collapse">
        <% if (typeof authUser === 'undefined') { %>
          <ul class="navbar-nav mr-auto">
            <!-- unauthenticated user navbar -->
              <li class="nav-item active">
                <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
              </li>
          </ul>

          <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
            <label for="login-email" class="navbar-text">Log in:&nbsp;</label><input class="form-control mr-sm-2" id="login-email" name="email" type="text" placeholder="Email address" aria-label="Email address" />
            <input class="form-control mr-sm-2" id="login-password" name="password" type="password" placeholder="Password" aria-label="Password" />
            <button class="btn btn-success my-2 my-sm-0" type="submit">Login</button>
          </form>
        <% } else { %>
          <ul class="navbar-nav mr-auto">
            <!-- authenticated user navbar -->
              <li class="nav-item active">
                <a class="nav-link" href="/landing">Home <span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
              <li class="nav-item">
                <a class="nav-link hreflessLink" data-toggle="modal" data-target="#raiseIssueModal">Raise an issue</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/community">Community</a>
              </li>
          </ul>

          <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Community search" aria-label="Community Search" />
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        <% } %>
      </div>
    </nav>
